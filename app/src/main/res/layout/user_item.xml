<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"
        android:id="@+id/id_profile_user"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_profile_user"
        android:id="@+id/id_name_user"
        android:text="username" android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
       android:src="@mipmap/ic_launcher"
        android:layout_below="@id/id_name_user"
        android:id="@+id/img_on"
        app:civ_border_width="10dp"
        app:civ_border_color="#05df29"
        android:visibility="gone"
        android:layout_alignRight="@id/id_profile_user"


        android:layout_height="15dp"

        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/id_name_user"
        android:id="@+id/img_off"
        app:civ_border_width="10dp"
        app:civ_border_color="#bfbfbf"
        android:layout_alignRight="@id/id_profile_user"
        android:visibility="gone"

        android:layout_height="15dp"

        />


</RelativeLayout>